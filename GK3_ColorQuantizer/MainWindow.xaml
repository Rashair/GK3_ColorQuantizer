<Window x:Class="GK3_ColorQuantizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wT="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        xmlns:local="clr-namespace:GK3_ColorQuantizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" MinWidth="800" MinHeight="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid x:Name="MenuGrid" Background="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="5*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:Name="ChoosePictureButton" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="10" Click="ChoosePictureButton_Click">Choose picture</Button>

            <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" >Colours:</Label>
            <wT:IntegerUpDown x:Name="kInput" Grid.Row="2" Grid.Column="2" Margin="10" DefaultValue="256" Text="256" Height="35" ValueChanged="K_ValueChanged"/>

            <Label Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Center" >Algorithm:</Label>
            <RadioButton x:Name="NoneRadio" GroupName="Algorithm" Grid.Row="4"  Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,0,0" 
                         Checked="NoneRadio_Checked" IsChecked="True">None</RadioButton>
            <RadioButton x:Name="AverageDitheringRadio" GroupName="Algorithm" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,0,0" 
                         Checked="AverageDitheringRadio_Checked">Average dithering</RadioButton>
            <RadioButton x:Name="ErrorDiffusionDitheringRadio" GroupName="Algorithm" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,0,0" 
                         Checked="ErrorDiffusionDitheringRadio_Checked">Error diffusion dithering</RadioButton>
            <RadioButton x:Name="OrderedDitheringV1Radio" GroupName="Algorithm" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,0,0" 
                         Checked="OrderedDitheringV1Radio_Checked">Ordered dithering v1</RadioButton>
            <RadioButton x:Name="OrderedDitheringV2Radio" GroupName="Algorithm" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,0,0" 
                         Checked="OrderedDitheringV2Radio_Checked">Ordered dithering v2</RadioButton>
            <RadioButton x:Name="PopularityAlgorithmRadio" GroupName="Algorithm" Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" Margin="10,10,0,0" 
                         Checked="PopularityAlgorithmRadio_Checked">Popularity algorithm</RadioButton>
        </Grid>
        <Canvas x:Name="mainCanvas" Grid.Column="1" Loaded="mainCanvas_Loaded" />

    </Grid>
</Window>
